<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bumper</title>

    <link rel="stylesheet" href="/static/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/static/css/custom.css" />
    <script src="/static/js/htmx.min.js"></script>
    <script src="/static/js/main.js"></script>
    <!-- Moved inline JS to an external file -->
  </head>
  <body>
    <div
      id="toast-container"
      class="toast-container position-fixed top-0 end-0 p-3"
    ></div>
    <div class="container-fluid my-4">
      <header class="mb-4">
        <h1 class="text-center">Bumper</h1>
      </header>

      <main class="grid-container">
        <!-- Section Stats -->
        <section>
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Server Status</h2>
            </div>
            <div
              class="card-body"
              hx-get="/server-status"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/server_status.jinja2' %}
            </div>
          </div>
        </section>

        <section>
          <!-- Section Bots -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Bots</h2>
            </div>
            <div
              class="card-body"
              hx-get="/bots"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/bots.jinja2' %}
            </div>
          </div>

          <!-- Section Clients -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h2 class="card-title mb-0">Clients</h2>
            </div>
            <div
              class="card-body"
              hx-get="/clients"
              hx-trigger="load, every 5s"
              hx-swap="innerHTML"
            >
              {% include 'partials/clients.jinja2' %}
            </div>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
