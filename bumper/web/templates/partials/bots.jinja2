<div class="table-responsive">
    <table class="table table-sm table-striped table-hover">
        <thead class="table-dark">
        <tr>
            <th>SN</th>
            <th>Nickname</th>
            <th>Class</th>
            <th>DID</th>
            <th>Resource</th>
            <th>Company</th>
            <th>Connected</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for bot in bots %}
            <tr>
                <td>{{ bot.name }}</td>
                <td>{{ bot.nick }}</td>
                <td>{{ bot.class }}</td>
                <td>{{ bot.did }}</td>
                <td>{{ bot.resource }}</td>
                <td>{{ bot.company }}</td>
                <td>
                    {% if bot.mqtt_connection and bot.xmpp_connection %}
                        <span class="badge badge-success">MQTT & XMPP</span>
                    {% elif bot.mqtt_connection %}
                        <span class="badge badge-success">MQTT</span>
                    {% elif bot.xmpp_connection %}
                        <span class="badge badge-success">XMPP</span>
                    {% else %}
                        <span class="badge badge-danger">Disconnected</span>
                    {% endif %}
                </td>
                <td>
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeEntity('bot', '{{ bot.did }}')">Remove</button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
